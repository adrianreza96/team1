@{
    ViewBag.Title = "Home Page";
}

<title>@ViewBag.Title - FeastFreedom</title>
<body style="background-color:black">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="carousel_caption d-none d-md-block">
                    <h4 style="color: white; font-family: 'Ruthie', cursive; position: absolute; top: 25%; left:auto"><span style="font-size: 500%">Search </span><span style="font-family: open sans; font-weight: 100; font-size: 250%">easily</span></h4><br>
                </div>
                <img class="d-block w-100" src="@Url.Content("~/Images/carrot.jpg")" alt="First slide">
                <footer class="carousel-bottom d-none d-md-block">
                    <p>&copy; @DateTime.Now.Year - FeastFreedom</p>
                </footer>
            </div>
            <div class="carousel-item">
                <div class="carousel-caption d-none d-md-block">
                    <h4 style="color: white; font-family: 'Ruthie', cursive; position: absolute; top: 25%; left:auto"><span style="font-size: 500%">Happily </span><span style="font-family: open sans; font-weight: 100; font-size: 250%">order</span></h4><br>
                </div>
                <img class="d-block w-100" src="@Url.Content("~/Images/cake.jpg")" alt="Second slide">
                <footer class="carousel-bottom d-none d-md-block">
                    <p>&copy; @DateTime.Now.Year - FeastFreedom</p>
                </footer>
            </div>
            <div class="carousel-item">
                <div class="carousel-cap d-none d-md-block">
                    <h4 style="color: white; font-family: 'Ruthie', cursive; position: absolute; top: 25%; left:auto; font-size: 730%"><span style="font-family: 'Open Sans'; font-size: 60%; font-weight: 100">sit </span> to <span style="font-family: 'Open Sans'; font-size: 60%; font-weight: 100">dine</span></h4><br>
                </div>
                <img class="d-block w-100" src="@Url.Content("~/Images/glass.jpg")" alt="Third slide">
                <footer class="carousel-bottom d-none d-md-block">
                    <p>&copy; @DateTime.Now.Year - FeastFreedom</p>
                </footer>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

   

</body>


