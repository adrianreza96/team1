@model FeastFreedom.Models.Kitchen

@{
    ViewBag.Title = "Create";
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <div style="text-align:center;padding-left:60px">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="padding: 30px 0px 10px">Register Kitchen</h4>
            <hr style="border-top: 3px dotted palevioletred; width:5%">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.KitchenName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 mx-auto w-25">
                    @Html.EditorFor(model => model.KitchenName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KitchenName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.WorkingDays, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 mx-auto w-25">
                    <select id="selectedDays" name="selectedDays" class="daySelect form-control" multiple>
                        <option>Monday</option>
                        <option>Tuesday</option>
                        <option>Wednesday</option>
                        <option>Thursday</option>
                        <option>Friday</option>
                        <option>Saturday</option>
                        <option>Sunday</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.selectedDays, "", new { @class = "text-danger" })
                </div>
            </div>

            @{
                string[] time = new string[] {"12:00 AM", "12:30 AM", "1:00 AM", "1:30 AM", "2:00 AM", "2:30 AM", "3:00 AM", "3:30 AM", "4:00 AM", "4:30 AM", "5:00 AM", "5:30 AM",
                    "6:00 AM", "6:30 AM", "7:00 AM", "7:30 AM", "8:00 AM", "8:30 AM", "9:00 AM", "9:30 AM", "10:00 AM", "10:30 AM", "11:00 AM", "11:30 AM","12:00 PM", "12:30 PM",
                    "1:00 PM", "1:30 PM", "2:00 PM", "2:30 PM", "3:00 PM", "3:30 PM", "4:00 PM", "4:30 PM", "5:00 PM", "5:30 PM", "6:00 PM", "6:30 PM","7:00 PM", "7:30 PM",
                    "8:00 PM", "8:30 PM", "9:00 PM", "9:30 PM", "10:00 PM", "10:30 PM", "11:00 PM", "11:30 PM" };

                int length = time.Length;
            }

            <div class="form-group">
                @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 mx-auto w-25">
                    <select id="timeStart" name="timeStart" class="form-control timeSelect" place>
                        @for (int i = 0; i < length; i++)
                        {
                            <option>@time[i]</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.CloseTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 mx-auto w-25">
                    <select id="timeClose" name="timeClose" class="form-control timeSelect">
                        @for (int i = 0; i < length; i++)
                        {
                            <option>@time[i]</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.CloseTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 mx-auto w-25">
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <input style="float:right; margin-right:25px" type="submit" value="Create" class="btn btn-secondary btn-sm" />
                    </div>
                    <div class="col-sm-6">
                        @Html.ActionLink("Cancel", "Index", "Home", new { area = "" }, new { @class = "btn btn-secondary btn-sm float_left" })
                    </div>
                </div>
            </div>
        </div>
        }

    </div>

    <img src="~/Images/pizza.jpg" style="width:111.5%; height: 48px" alt="alison-marras-ElGnfom4tIw-unsplash" />

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <script>
        $(document).ready(function () {
            $(".daySelect").select2({
                allowClear: true,
                theme: "classic"
            });

            $(".timeSelect").select2();

        });

    </script>

    <script src="~/Scripts/select2.min.js"></script>
</body>
</html>

