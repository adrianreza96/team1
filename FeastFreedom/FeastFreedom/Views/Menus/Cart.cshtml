@model IEnumerable<FeastFreedom.Models.Menu>

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

@if (Model == null)
{
    <h3>Empty Cart</h3>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VeganFriendly)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kitchen.KitchenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kitchen1.KitchenName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VeganFriendly)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredients)
                </td>
                <td id="image">
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kitchen.KitchenName)
                </td>
                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MenuId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MenuId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MenuId })
                </td>
            </tr>          
        }
    </table>
    <div>
        @{ 
            List<FeastFreedom.Models.Menu> menu = Model.ToList();
        }
        <a id="btn_add" href="@Url.Action("Create", "Orders")" class="btn btn-info btn-lg" style="margin-left:60px">
            <span class="glyphicon glyphicon-shopping-cart"></span> Check Out
        </a>
    </div>
}
<style>
    #image {
        word-break: break-all;
        white-space: normal;
    }
</style>