@model IEnumerable<FeastFreedom.Models.Menu>

@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="wrapper">

    @foreach (var item in Model)
    {
        <div id="tile" class="col-xs-4" style=" background-color: grey;">
            <a href="@Url.Action("Details", "Menus", new { id = item.MenuId })" class="thumbnail" style="color:white; ">
                <img src="@item.Image" style="width:300px ; height:200px" />
                <br />
                @Html.DisplayFor(modelItem => item.ItemName)
                $@Html.DisplayFor(modelItem => item.Price)
                <a id="btn_add" href="@Url.Action("Add", "Menus", item )" class="btn btn-info btn-lg" style="margin-left:60px">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart
                </a>
            </a>
        </div>
    }

</div>
<style>
    .wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-auto-rows: minmax(100px, auto);
        column-gap: 10px;
        width: auto;
    }
    #tile {
        border-radius: 25px;
        border: 2px solid grey;
        padding: 20px;
        margin-top: 30px;
    }
html, body {
    margin: 10px;
    height: 100%;
}


</style>
