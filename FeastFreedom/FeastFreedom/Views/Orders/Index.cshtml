@model IEnumerable<FeastFreedom.Models.Order>

@{
    ViewBag.Title = "Index";

}
<head>
<meta content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="container" style="padding-left:30%">
        <h2 style="padding-top: 4%">Thank you for your order</h2>
        @{
            if (ViewData["Success"] != null)
            {
                <div class="form-group">
                    <p style="padding: 0px 0px 10px 5px; font-size:80%">@ViewData["Success"].</p>
                </div>
            }
            else
            {
                <div class="form-group">
                    <p style="padding: 0px 0px 10px 5px; font-size:80%">We are processing your order now. Here are the details.</p>
                </div>
            }
        }

        @using (Html.BeginForm("SendEmail", "Orders", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group row">
                <label class="control-label col-md-4" style="text-align:right; font-weight:bold">Confirmation will be sent to:</label>
                <div class="col-md-4">
                    <p style="padding: 7px 0px 0px;">@Session["Email"]</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-4" style="text-align:right; font-weight:bold">Order Date:</label>
                <div class="col-md-4">
                    <p style="padding: 7px 0px 0px;">To be generated form onclick order</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-4" style="text-align:right; font-weight:bold">Billing Address:</label>
                <div class="col-md-4">
                    <p style="padding: 7px 0px 0px;">To be displayed</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-4" style="text-align:right; font-weight:bold">Shipping Address:</label>
                <div class="col-md-4">
                    <p style="padding: 7px 0px 0px;">To be displayed</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-4" style="text-align:right; font-weight:bold">Total Price:</label>
                <div class="col-md-4">
                    <p style="padding: 7px 0px 0px;">To be displayed</p>
                </div>
            </div>

            if (ViewData["Success"] == null)
            {
                <div class="form-group row">
                    <div class="col-md-4" style="text-align:right">
                        <button type="submit" class="btn btn-dark">Confirm Order</button>
                    </div>
                </div>
            }

            if (ViewData["Error"] != null)
            {
                <div class="form-group row">
                    <div class="col-md-4" style="text-align:right">
                        <p>@ViewData["Error"]. Change email address in User profile.</p>
                    </div>
                </div>
            }

        }
    </div>

    <img src="~/Images/pizzah.jpg" alt="Avatar" style="border-radius: 52%; width:7px; height:7px; position:relative; bottom:10px; left:90%; opacity:0.7">
    <img src="~/Images/pizzah.jpg" alt="Avatar" style="border-radius: 52%; width:10px; height:10px; position:relative; bottom:50px; left:91%; opacity:0.8">
    <img src="~/Images/pizzah.jpg" alt="Avatar" style="border-radius: 52%; width:20px; height:20px; position:relative; bottom:80px; left:92.5%; opacity:0.9">
    <img src="~/Images/pizzah.jpg" alt="Avatar" style="border-radius: 52%; width:30px; height:30px; position:relative; bottom:120px; left:95%">

</body>




