@model IEnumerable<FeastFreedom.Models.Order>

@{
    ViewBag.Title = "Index";
}
    <div style="text-align:center;padding-left:60px">
        <h4 style="padding: 30px 0px 10px">Thank you for your order</h4>
        <hr style="border-top: 3px dotted palevioletred; width:5%">

        @{
            if ((string)ViewData["Error"] == "Confirmation sent to year email")
            {
                <p style="padding: 0px 0px 10px; font-size:80%">@ViewData["Error"].</p>
            }
            else
            {
                <p style="padding: 0px 0px 10px; font-size:80%">We are processing your order now. Here are the details.</p>
            }
        }

        <p>Confirmation will be sent to: (string)@Session["Email"]</p>
        <p>OrderDate: will be generated when order now from cart is clicked</p>
        @*<p>Delivery Location: @Html.DisplayFor(model => model[0].ShippingAddress)</p>*@
        <p>Total Price: XXXX</p>
        @Html.ActionLink("Confirm", "SendEmail", "Orders")

        @{
            if ((string)ViewData["Error"] == "Some Error")
            {
                <p>Email not sent</p>
            }
         }
    </div>



