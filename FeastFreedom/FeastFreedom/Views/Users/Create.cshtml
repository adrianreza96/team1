@model FeastFreedom.Models.User

@{
    ViewBag.Title = "Create";
}

<meta name="viewport" content="width-device-width" />
<title>New Account</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="container" style="font-size:13px">

    <form class="form-horizontal" action=" " method="post">
        @Html.AntiForgeryToken()
        <fieldset>

            <!-- Form Name -->
            <center><h2 style="padding-top: 25px">Create New Account</h2></center><br>

            <!-- Text input-->

            <div class="form-group row">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-user"></span></span>
                        </div>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeHolder = "First Name", @style = "font-size:13px" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>

            <!-- Text input-->

            <div class="form-group row">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-user"></span></span>
                        </div>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeHolder = "Last Name", @style = "font-size:13px" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>

            <!-- Text input-->
            <div class="form-group row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-envelope"></span></span>
                        </div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeHolder = "joe@example.com", @style = "font-size:13px" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <!-- Text input-->

            <div class="form-group row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-user"></span></span>
                        </div>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeHolder = "password", @style = "font-size:13px" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <!-- Text input-->

            <div class="form-group row">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-user"></span></span>
                        </div>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeHolder = "confirm password", @style = "font-size:13px" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <!-- Text input-->

            <div class="form-group row">
                @Html.LabelFor(model => model.BillingAddress, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-book"></span></span>
                        </div>
                        @Html.EditorFor(model => model.BillingAddress, new { htmlAttributes = new { @class = "form-control", placeHolder = "23 example street", @style = "font-size:13px" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.BillingAddress, "", new { @class = "text-danger" })
            </div>

            <!-- Text input-->

            <div class="form-group row">
                @Html.LabelFor(model => model.SecurityQuestionOne, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-question-circle"></span></span>
                        </div>
                        @Html.EditorFor(model => model.SecurityQuestionOne, new { htmlAttributes = new { @class = "form-control", placeHolder = "2/28/2000", @style = "font-size:13px" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.BillingAddress, "", new { @class = "text-danger" })
            </div>

            <!-- Text input-->

            <div class="form-group row">
                @Html.LabelFor(model => model.SecurityQuestionTwo, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-question-circle"></span></span>
                        </div>
                        @Html.EditorFor(model => model.SecurityQuestionTwo, new { htmlAttributes = new { @class = "form-control", placeHolder = "New York City", @style = "font-size:13px" } })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.SecurityQuestionTwo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.RoleId, htmlAttributes: new { @class = "control-label col-md-4 font-weight-bold", @style = "text-align:right" })
                <div class="col-md-4">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fa fa-list-ul"></span></span>
                        </div>
                        @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control dropdown", @style = "font-size:13px" })
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
            </div>

            <!-- Button -->

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" value="Create" class="btn btn-dark" style="float:right" />
                    </div>
                    <div class="col-md-6">
                        @Html.ActionLink("Cancel", "Login", "Users", new { @class = "btn btn-dark" })
                    </div>
                </div>
            </div>

        </fieldset>
    </form>
</div>
<img src="~/Images/carrot.jpg" alt="Avatar" style="border-radius: 52%; width:7px; height:7px; position:relative; bottom:110px; left:90%; opacity:0.5">
<img src="~/Images/carrot.jpg" alt="Avatar" style="border-radius: 52%; width:10px; height:10px; position:relative; bottom:150px; left:91%; opacity:0.6">
<img src="~/Images/carrot.jpg" alt="Avatar" style="border-radius: 52%; width:20px; height:20px; position:relative; bottom:180px; left:92.5%; opacity:0.7">
<img src="~/Images/carrot.jpg" alt="Avatar" style="border-radius: 52%; width:30px; height:30px; position:relative; bottom:220px; left:95%; opacity:0.8">

</div><!-- /.container -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


